<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_v"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/pad_5dp">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lt" />

    <LinearLayout
        android:id="@+id/llRowWarrant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/pad_5dp"
        android:paddingBottom="@dimen/pad_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/wrntAmount"
                style="@style/bail_warrant_dtl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/pad_5dp"
                android:textColor="@color/bail_rquest_font_bold" />

            <TextView
                android:id="@+id/wrntTownship"
                style="@style/bail_warrant_dtl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/pad_5dp"
                android:textColor="@color/bail_rquest_font_bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/wrntCaseNum"
                style="@style/bail_warrant_dtl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/pad_5dp"
                android:textColor="@color/bail_rquest_font_bold" />

            <TextView
                android:id="@+id/wrntPowerNum"
                style="@style/bail_warrant_dtl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/pad_5dp"
                android:textColor="@color/bail_rquest_font_bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llCourtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/wrntCourtDate"
                    style="@style/bail_warrant_dtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:text=""
                    android:textColor="@color/bail_rquest_font_bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBondStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/pad_10dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvBondStatus"
                    style="@style/bail_warrant_dtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_text_active"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:paddingRight="@dimen/pad_5dp"
                    android:text=""
                    android:textColor="@color/white" />

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>