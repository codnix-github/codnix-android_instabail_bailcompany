<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white">

    <LinearLayout
        style="@style/linear_v"
        android:layout_height="wrap_content" >

      <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_smoke"
        android:gravity="center_horizontal">   

    <LinearLayout
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/pad_20dp"
        android:background="@drawable/profile_pic_mask"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/profile_pic"
             />
	</LinearLayout>
	<ImageView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/img"
            android:layout_alignBottom="@+id/img"
            android:src="@drawable/btn_add_profile_pic" />
<View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                 android:layout_below="@id/img"
                android:background="@color/agent_prof_saperator"
                android:layout_marginTop="@dimen/pad_5dp"/>
    </RelativeLayout>
     <LinearLayout 
            style="@style/linear_v"
            android:padding="@dimen/pad_20dp">
<TextView 
                style="@style/style_get"
                android:textColor="@color/text_get_agent"
                android:text="@string/firstname"
                />
        <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/saperator_yellow"/>
        <EditText 
                style="@style/style_edit_profile"
                android:hint="@string/firstname"
                />
         <TextView
             style="@style/style_get"
             android:textColor="@color/text_get_agent"
             android:text="@string/lastname"
             />
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/saperator_yellow"/>
         <EditText
             style="@style/style_edit_profile"
             android:hint="@string/lastname"
             />
        <TextView 
                style="@style/style_get"
                android:textColor="@color/text_get_agent"
                android:text="@string/cname"
                />
        <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/saperator_yellow"/>
        <EditText 
                style="@style/style_edit_profile"
                android:hint="@string/cname"
                />
        <TextView 
                style="@style/style_get"
                android:textColor="@color/text_get_agent"
                android:text="@string/email"
                />
        <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/saperator_yellow"/>
        <EditText 
                style="@style/style_edit_profile"
                android:hint="@string/email"
                />
        <TextView 
                style="@style/style_get"
                android:textColor="@color/text_get_agent"
                android:text="@string/pass"
                />
        <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/saperator_yellow"/>
        <EditText 
                style="@style/style_edit_profile"
                android:hint="@string/pass"
                android:inputType="textPassword"
                />
         <TextView 
                style="@style/style_get"
                android:textColor="@color/text_get_agent"
                android:text="@string/addr"
                />
        <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/saperator_yellow"/>
        <EditText 
                style="@style/style_edit_profile"
                android:hint="@string/addr"
                android:singleLine="false"
                />
         <TextView 
                style="@style/style_get"
                android:textColor="@color/text_get_agent"
                android:text="@string/agency_license"
                />
        <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/saperator_yellow"/>
       <EditText 
                style="@style/style_edit_profile"
                android:hint="@string/agency_license"
                android:singleLine="true"
                />
        <TextView 
                style="@style/style_get"
                android:textColor="@color/text_get_agent"
                android:text="@string/p_number"
                />
        <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/saperator_yellow"/>
        <EditText 
                style="@style/style_edit_profile"
                android:hint="@string/p_number"
                android:inputType="phone"
                />
        <TextView 
                style="@style/style_get"
                android:textColor="@color/text_get_agent"
                android:text="@string/insur"
                />
        <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/saperator_yellow"/>
       <Spinner 
                android:id="@+id/insure_sel_edit_profile"
                style="@style/style_get_ch"/>
</LinearLayout>
<LinearLayout 
    style="@style/linear_h"
    android:background="@color/theme_black">
    <TextView 
        android:id="@+id/btn_save_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/pad_10dp"
        android:paddingBottom="@dimen/pad_10dp"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@color/white"/>
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/pad_10dp"
        android:layout_marginBottom="@dimen/pad_10dp"/>
    <TextView 
        android:id="@+id/btn_cancel_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="@dimen/pad_10dp"
        android:paddingBottom="@dimen/pad_10dp"
        android:text="@string/cancel"
        android:textColor="@color/white"/>
</LinearLayout>

    </LinearLayout>

</ScrollView>
