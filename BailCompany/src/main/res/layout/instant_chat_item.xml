<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:clickable="false"
    android:paddingBottom="10dp" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/default_profile_image"
        android:contentDescription="@string/Amnt_percent" />

    <ImageView
        android:id="@+id/mask"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/hired_agent_pic_mask_white"
        android:contentDescription="@string/Amnt_percent" />

    <ImageView
        android:id="@+id/status"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/mask"
        android:layout_alignRight="@+id/mask"
        android:background="@drawable/agent_profile_green"
        android:contentDescription="@string/Amnt_percent" />

    <TextView
        android:id="@+id/message"
        style="@style/style_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/name"
        style="@style/style_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/image"
        android:text="@string/app_name"
        android:textSize="@dimen/txt_14sp" />

    <TextView
        android:id="@+id/time"
        style="@style/style_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="10dp"
        android:text="@string/date_time"
        android:textSize="@dimen/txt_10sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/status"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/Amnt_percent"
        android:src="@drawable/gray_arrow_hire_agent" />

</RelativeLayout>