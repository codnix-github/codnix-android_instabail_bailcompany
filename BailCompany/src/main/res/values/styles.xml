    <style name="linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="linear_h" parent="linear">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linear_v" parent="linear">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_edit">
        <item name="android:textColor">@color/text_get_agent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:layout_marginTop">@dimen/pad_10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="style_edit_wrap" parent="style_edit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_agent" parent="style_edit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_get_value</item>
        <item name="android:layout_marginTop">@dimen/pad_5dp</item>
    </style>

    <style name="style_edit_match" parent="style_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="style_get" parent="style_edit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_get_agent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/txt_12sp</item>
        <item name="android:layout_marginTop">@dimen/pad_10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="style_get_ch" parent="style_get">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_edit_profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_get_value</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edit_shape</item>
        <item name="android:padding">@dimen/pad_5dp</item>
    </style>

    <style name="receipt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_12sp</item>
        <item name="android:layout_marginTop">@dimen/pad_5dp</item>
    </style>

    <style name="Theme.CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/trans_draw</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="bail_request">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bail_request_font_normal</item>
        <item name="android:textSize">@dimen/txt_12sp</item>
    </style>
    <style name="bail_warrant_dtl">

        <item name="android:textColor">@color/bail_request_font_normal</item>
        <item name="android:textSize">@dimen/txt_12sp</item>
    </style>

    <style name="btn_completion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_18sp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/pad_10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- Defendant Profile Design -->
    <style name="Profile1NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Profile1TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabIndicatorColor">@color/profile1colorPrimary</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
        <item name="tabTextAppearance">@style/Profile1NavigationTabTextAppeareance</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Profile2ScrollbarStyle">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/recycler_scrollbar</item>
        <item name="android:scrollbarTrackVertical">@android:color/transparent</item>
        <item name="android:scrollbarSize">2dp</item>
        <item name="android:scrollbarFadeDuration">2000</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">1000</item>
    </style>

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/theme_yellow</item>
        <item name="colorAccent">@color/theme_yellow</item>
        <item name="android:background">@color/theme_yellow</item>
    </style>

</resources>